
# 🔧 认证服务环境配置模板

# ===== 应用基础配置 =====
APP_NAME=auth-service
APP_ENV=development
APP_PORT=8080

# ===== Docker镜像配置 =====
DOCKER_IMAGE=lbtsam/auth-service
DOCKER_TAG=latest

# ===== 服务器配置 =====
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_DOMAIN=localhost:8080
CORS_ALLOWED_ORIGINS=*

# ===== 日志配置 =====
LOG_LEVEL=debug
LOG_FORMAT=text

# ===== 健康检查配置 =====
HEALTH_CHECK_TIMEOUT=10s

# ===== 服务超时配置 =====
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# ===== Swagger配置 =====
SWAGGER_HOST=127.0.0.1:8080
PUBLIC_HOST=localhost:8080

# ===== Consul配置（服务注册与发现）=====
CONSUL_ENABLED=true
CONSUL_HTTP_ADDR=http://127.0.0.1:8500
# CONSUL_HTTP_TOKEN=your-consul-token

# === Consul Meta字段配置 ===
# 网关路由核心
CONSUL_ROUTE_PREFIX=/auth-service
CONSUL_STRIP_PREFIX=true
CONSUL_BASE_PATH=/

# 服务标识
CONSUL_SERVICE_TYPE=auth-service
CONSUL_VERSION=v1.0.0
CONSUL_FRAMEWORK=gin
CONSUL_LANGUAGE=go

# 监控端点
CONSUL_HEALTH_PATH=/health
CONSUL_METRICS_PATH=/metrics
CONSUL_METRICS_NAMESPACE=auth_service
CONSUL_INFO_PATH=/api/v1/stats

# 负载均衡
CONSUL_WEIGHT=100
CONSUL_LB_POLICY=weighted_round_robin
CONSUL_TIMEOUT_MS=30000
CONSUL_RETRIES=2

# 依赖关系
CONSUL_DEPEND_POSTGRES=false
CONSUL_DEPEND_REDIS=false
CONSUL_DEPEND_RABBITMQ=false
CONSUL_DEPEND_MYSQL=false

# ===== 服务注册配置 =====
SERVICE_ADDRESS=127.0.0.1
SERVICE_PORT=8080
SERVICE_SCHEME=http
